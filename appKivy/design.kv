                size_hint_y: 0.65
                MDTextField:
                    id: reseñaTexto
                    hint_text: 'Introduce tu reseña'
                    multiline: True
                    size_hint_x: 0.5

            Label:
                id: error
                opacity: 0
                size: (0, 0)
                color: 1, 0, 0, 1
                size_hint: None, None

